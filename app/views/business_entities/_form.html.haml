= form_for(@business_entity) do |f|
  - if @business_entity.errors.any?
    #error_explanation
      %h2
        = pluralize(@business_entity.errors.count, "error")
        prohibited this business_entity from being saved:
      %ul
        - @business_entity.errors.full_messages.each do |message|
          %li= message
  .actions
    = f.submit
