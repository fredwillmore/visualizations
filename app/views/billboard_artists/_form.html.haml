= form_for(@billboard_artist) do |f|
  - if @billboard_artist.errors.any?
    #error_explanation
      %h2
        = pluralize(@billboard_artist.errors.count, "error")
        prohibited this billboard_artist from being saved:
      %ul
        - @billboard_artist.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
